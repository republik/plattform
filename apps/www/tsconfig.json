{
  "extends": "@republik/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2020",
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "#graphql/*": [
        "./graphql/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "name": "@republik/mdast-mail-templates",
  "version": "1.0.0",
  "description": "render mdast trees to email",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./email": {
      "require": "./dist/email.js",
      "import": "./dist/email.mjs",
      "types": "./dist/email.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify --clean --out-dir dist",
    "dev": "tsup src/index.ts --format cjs,esm --dts --minify --clean --out-dir dist --sourcemap --watch",
    "test": "jest --passWithNoTests",
    "test:dev": "jest --watch"
  },
  "devDependencies": {
    "@republik/tsconfig": "*",
    "@swc/core": "^1.3.57",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@republik/mdast-react-render": "*",
    "glamor": "^2.20.40",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.0",
    "tsup": "^7.2.0",
    "d3-time-format": "^2.2.3"
  },
  "peerDependencies": {
    "glamor": "^2.20.40",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "d3-time-format": "^2.2.3"
  }
}

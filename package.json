  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "child-process-promise": "^2.2.1",
    "gsheets": "^2.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",

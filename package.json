    "start": "node index.js",
    "precommit": "lint-staged",
    "standardize": "standard --fix",
    "migrate:up": "db-migrate up",
    "migrate:down": "db-migrate down",
    "db:seed": "cat seeds/seeds.json | node seeds/seed.js --truncate",
    "db:reset:noseeds": "db-migrate reset && db-migrate up",
    "db:reset": "npm run db:reset:noseeds && npm run db:seed",
